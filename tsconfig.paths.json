{
  "compilerOptions": {
    "baseUrl": "./src",
    "paths": {
      "@/components/*": ["components/*"],
      "@/types/*": ["types/*"],
      "@/content/*": ["content/*"],
      "@/config/*": ["config/*"],
      "@/features/*": ["features/*"],
      "@/hooks": ["hooks"],
      "@/routes": ["routes"],
      "@/routes/paths": ["routes/paths"]
    }
  },
  "include": ["./**/*.ts", "./**/*.tsx"]
}
